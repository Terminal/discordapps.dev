<div class="container">
  <h5>{{ i18n __ 'pages.bots.initiateCategoryFilter'}}</h5>
  <div>
    {{#each categories}}
      <a class="btn white black-text ls-homepage-category" href="{{languagePrefix}}/bots?category={{this}}">
        {{ i18n ../__ (concat "categories." this) }}
      </a>
    {{/each}}
  </div>
</div>

{{#if slider.length}}
  <div class="ls-main-content container box-shadow center ls-round">
    <div id="ls-carousel">
      {{#each slider}}
      <div class="ls-carousel-item" {{#if this.cachedImages.cover}}style="background-image: url({{this.cachedImages.cover}})"{{/if}}>
        <a href="{{../languagePrefix}}/bots/{{this.id}}">
          <div class="ls-carousel-item-content">
            <img class="ls-carousel-item-content-avatar" src="{{this.cachedImages.avatar}}">
            <div>
              <h4>{{this.contents.name}}</h4>
              <p class="white-text">{{this.contents.description}}</p>
            </div>
          </div>
        </a>
      </div>
      {{/each}}
    </div>
  </div>
{{/if}}

<div class="center-text container card-container">
  {{#each cards}}
    {{> modesta-card __=../__ item=this}}
  {{else}}
    {{i18n __ 'pages.list.empty'}}
  {{/each}}
</div>

<div class="center">
  <a href="{{languagePrefix}}/bots" class="btn white black-text">{{i18n __ 'pages.bots.more'}}</a>
</div>

<script src="/node_modules/tiny-slider/dist/tiny-slider.js"></script>
<script>
  {
    const slider = document.getElementById('ls-carousel');
    if (slider) {
      tns({
        container: '#ls-carousel',
        controlsPosition: 'bottom',
        navPosition: 'bottom',
        loop: true,
        controlsText: [
          `{{i18n __ "pagination.image.prev"}}`,
          `{{i18n __ "pagination.image.next"}}`
        ]
      });
    }
  }
</script>
